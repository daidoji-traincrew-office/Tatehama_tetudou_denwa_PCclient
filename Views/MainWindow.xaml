<Window x:Class="Tatehama_tetudou_denwa_PCclient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tatehama_tetudou_denwa_PCclient"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="800">
    <Window.Resources>
        <Style TargetType="Button" x:Key="ImageButton">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="_勤務地変更" Click="ChangeWorkLocationMenuItem_Click"/>
            <MenuItem Header="_設定" Click="SettingsMenuItem_Click"/>
        </Menu>

        <Viewbox Grid.Row="1" Stretch="Uniform">
            <Canvas Width="800" Height="450">
                <Canvas.Background>
                    <ImageBrush ImageSource="/image/tetudoudenwa.png"/>
                </Canvas.Background>

                <ListView x:Name="CallList" Canvas.Left="51" Canvas.Top="83" Width="254" Height="331" Background="White" Foreground="Black" BorderBrush="Black" SelectionChanged="CallList_SelectionChanged" FontSize="16">
                </ListView>

                <TextBlock x:Name="NumberDisplay" 
                           Canvas.Left="381" Canvas.Top="211" Width="131" Height="43"
                           Background="White" 
                           Foreground="Black" 
                           TextAlignment="Center"
                           FontSize="30"
                           Padding="5,0"/>

                <Canvas x:Name="KeypadCanvas" Canvas.Left="370" Canvas.Top="256">
                    <Button x:Name="sevenButton" Canvas.Top="10.281" Canvas.Left="0" Width="51" Height="45" Style="{StaticResource ImageButton}" BorderBrush="Transparent" Click="sevenButton_Click">
                        <Button.Background>
                            <ImageBrush ImageSource="/image/nana.png" Stretch="Fill"/>
                        </Button.Background>
                    </Button>
                    <Button x:Name="eightButton" Canvas.Top="10.281" Canvas.Left="51" Width="51" Height="44" Style="{StaticResource ImageButton}" BorderBrush="Transparent" Click="eightButton_Click">
                        <Button.Background>
                            <ImageBrush ImageSource="/image/hachi.png" Stretch="UniformToFill"/>
                        </Button.Background>
                    </Button>
                    <Button x:Name="nineButton" Canvas.Top="10.281" Canvas.Left="104.75" Width="50" Height="43" Style="{StaticResource ImageButton}" BorderBrush="Transparent" Click="nineButton_Click">
                        <Button.Background>
                            <ImageBrush ImageSource="/image/kyuu.png" Stretch="Fill"/>
                        </Button.Background>
                    </Button>

                    <Button x:Name="fourButton" Canvas.Top="56.281" Canvas.Left="0" Width="48" Height="43" Style="{StaticResource ImageButton}" BorderBrush="Transparent" Click="fourButton_Click">
                        <Button.Background>
                            <ImageBrush ImageSource="/image/yon.png" Stretch="UniformToFill"/>
                        </Button.Background>
                    </Button>
                    <Button x:Name="fiveButton" Canvas.Top="56.281" Canvas.Left="51" Width="51" Height="43" Style="{StaticResource ImageButton}" BorderBrush="Transparent" Click="fiveButton_Click">
                        <Button.Background>
                            <ImageBrush ImageSource="/image/go.png" Stretch="UniformToFill"/>
                        </Button.Background>
                    </Button>
                    <Button x:Name="sixButton" Canvas.Top="56.281" Canvas.Left="104.75" Width="49" Height="45" Style="{StaticResource ImageButton}" BorderBrush="Transparent" Click="sixButton_Click">
                        <Button.Background>
                            <ImageBrush ImageSource="/image/roku.png" Stretch="UniformToFill"/>
                        </Button.Background>
                    </Button>

                    <Button x:Name="oneButton" Canvas.Top="103.031" Canvas.Left="0" Width="48" Height="44" Style="{StaticResource ImageButton}" BorderBrush="Transparent" Click="oneButton_Click">
                        <Button.Background>
                            <ImageBrush ImageSource="/image/iti.png" Stretch="UniformToFill"/>
                        </Button.Background>
                    </Button>
                    <Button x:Name="twoButton" Canvas.Top="103.031" Canvas.Left="51" Width="51" Height="43" Style="{StaticResource ImageButton}" BorderBrush="Transparent" Click="twoButton_Click">
                        <Button.Background>
                            <ImageBrush ImageSource="/image/ni.png" Stretch="UniformToFill"/>
                        </Button.Background>
                    </Button>
                    <Button x:Name="threeButton" Canvas.Top="103.031" Canvas.Left="104.75" Width="49" Height="43" Style="{StaticResource ImageButton}" BorderBrush="Transparent" Click="threeButton_Click">
                        <Button.Background>
                            <ImageBrush ImageSource="/image/san.png" Stretch="UniformToFill"/>
                        </Button.Background>
                    </Button>

                    <Button x:Name="syoukyoButton" Canvas.Top="148.531" Canvas.Left="0" Width="51" Height="43" Style="{StaticResource ImageButton}" BorderBrush="Transparent" Click="syoukyoButton_Click">
                        <Button.Background>
                            <ImageBrush ImageSource="/image/syoukyo.png" Stretch="UniformToFill"/>
                        </Button.Background>
                    </Button>
                    <Button x:Name="zeroButton" Canvas.Top="148.531" Canvas.Left="51" Width="51" Height="43" Style="{StaticResource ImageButton}" BorderBrush="Transparent" Click="zeroButton_Click">
                        <Button.Background>
                            <ImageBrush ImageSource="/image/zero.png" Stretch="UniformToFill"/>
                        </Button.Background>
                    </Button>
                </Canvas>

                <Canvas x:Name="FunctionButtonsCanvas" Canvas.Left="548" Canvas.Top="360">
                    <Button x:Name="jyuwaButton" Canvas.Left="0" Width="77" Height="80" Style="{StaticResource ImageButton}" BorderBrush="Transparent" Click="jyuwaButton_Click" Canvas.Top="10">
                        <Button.Background>
                            <ImageBrush ImageSource="/image/jyuwa.png" Stretch="Fill"/>
                        </Button.Background>
                    </Button>
                    <Button x:Name="hashinButton" Canvas.Left="77" Width="77" Height="80" Style="{StaticResource ImageButton}" BorderBrush="Transparent" Click="hashinButton_Click" Canvas.Top="10">
                        <Button.Background>
                            <ImageBrush ImageSource="/image/hashin.png" Stretch="Fill"/>
                        </Button.Background>
                    </Button>
                    <Button x:Name="syuwaButton" Canvas.Left="154" Width="77" Height="80" Style="{StaticResource ImageButton}" BorderBrush="Transparent" Click="syuwaButton_Click" Canvas.Top="10">
                        <Button.Background>
                            <ImageBrush ImageSource="/image/syuwa.png" Stretch="Fill"/>
                        </Button.Background>
                    </Button>
                </Canvas>

            </Canvas>
        </Viewbox>
    </Grid>
</Window>