<Window x:Class="Tatehama_tetudou_denwa_PCclient.Views.LocationSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tatehama_tetudou_denwa_PCclient.Views"
        mc:Ignorable="d"
        Title="勤務地を選択してください" Height="300" Width="250"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListBox x:Name="LocationListBox" Grid.Row="0" Margin="0,0,0,10"/>

        <Button x:Name="ConfirmButton" Grid.Row="1" Content="決定" Click="ConfirmButton_Click" IsDefault="True"/>
    </Grid>
</Window>
